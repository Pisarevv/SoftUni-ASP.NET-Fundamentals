@{
    @model ICollection<ProductViewModel>
    ViewData["Title"] = "All products";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<div class="d-grid gap-2 mb-2">
    <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
</div>

@if(Model.Count < 1){
    <h1>No products added yet!</h1>
}

else
{
    <div class="row">
    @foreach(var product in Model)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <form class="mt-2" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">
                        <div class="d-grid gap-2">
                            <input type="submit" value="Delete" class="btn btn-danger mb-2"/> 
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    </div>
}

